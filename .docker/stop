#!/usr/bin/env bash

ARG_CONTAINER=
while [[ $# > 0 ]]
do
  key="$1"
  case $key in
    -h|--help)
      ARG_HELP=YES
    ;;
    *)
      ARG_CONTAINER="$ARG_CONTAINER $key"
    ;;
  esac
  shift
done

if [[ -n "$ARG_HELP" ]]; then
  echo "Stop the Docker containers"
  echo "Usage:  $0 [CONTAINER...]"
  exit 0
fi

docker-compose stop $ARG_CONTAINER
