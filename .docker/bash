#!/usr/bin/env bash

ARG_CONTAINER="app"

while [[ $# > 0 ]]
do
  key="$1"
  case $key in
    -h|--help)
      ARG_HELP=YES
    ;;
    -c|--container)
      ARG_CONTAINER="$2"
      shift
    ;;
  esac
  shift
done

if [[ -n "$ARG_HELP" ]]; then
  echo "Start an interactive console in the container"
  echo "Automatically starts the container if not running"
  echo "  -c, --container   Specify the container"
  exit 0
fi

.docker/start -s $ARG_CONTAINER -b -d 2>&1 | grep -v "up-to-date"
docker-compose exec $ARG_CONTAINER /bin/bash
